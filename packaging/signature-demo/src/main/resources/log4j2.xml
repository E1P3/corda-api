<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="log-path">${sys:user.home:-logs}/.package-cli/logs</Property>
        <Property name="log-name">cordapp-builder</Property>
    </Properties>
    <Appenders>
        <RollingRandomAccessFile name="RollingFile-Appender"
                                 fileName="${log-path}/${log-name}.log"
                                 filePattern="${log-path}/${log-name}.%i.log.gz">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS} [%p] (%t) %c: %m%n"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="250 MB"/>
            </Policies>
        </RollingRandomAccessFile>
    </Appenders>

    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="RollingFile-Appender"/>
        </Root>
    </Loggers>
</Configuration>